<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:scrollbars="vertical"
    android:background="#F5F2FB"
    tools:context=".Host_groups">

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/back"/>

    <TextView
        android:id="@+id/edt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/back"
        android:text="Server Detail"
        android:textColor="#004AAD"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/back"
        android:layout_marginTop="15dp"
        android:background="#CBD1D2" />

    <TextView
        android:id="@+id/host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:text="Host"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/edt_host"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="25dp"
        android:text="localhost"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Port"
        android:id="@+id/port"
        android:textStyle="bold"
        android:layout_below="@id/host"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="port"
        android:id="@+id/edt_port"
        android:layout_below="@id/edt_host"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="70dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/port"
        android:layout_marginTop="15dp"
        android:background="#CBD1D2" />


    <TextView
        android:layout_width="106dp"
        android:layout_height="2dp"
        android:layout_below="@id/hostsbtn"
        android:layout_marginLeft="257dp"
        android:background="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hostsbtn"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@id/port"
        android:layout_marginTop="20dp"
        android:background="#F5F2FB"
        android:text="Hosts"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/problemsbtn"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@id/port"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:background="#F5F2FB"
        android:text="Problems"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/historybtn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_below="@id/port"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="20dp"
        android:background="#F5F2FB"
        android:text="History"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hostgroupbtn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@id/port"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="20dp"
        android:background="#F5F2FB"
        android:text="Hostgroups"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/hostsbtn"
        android:layout_marginTop="15dp"
        android:background="#CBD1D2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hostgroupslist"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/hostsbtn"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:scrollbars="vertical" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/addserver"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="5dp" />

</RelativeLayout>