<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#DEF3F8">






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID : "
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/hostid"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text"
            android:text="ID"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:textSize="16sp"
            android:layout_toRightOf="@id/hostid"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/hostname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16sp"
            android:layout_toRightOf="@id/text2"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hostid"
            android:text="IP : "
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hostid"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/text3"
            android:text="192.168.566.101"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hostid"
            android:layout_toRightOf="@id/ip"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Type : "
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="type"
            android:textSize="15sp"
            android:layout_below="@id/hostid"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/text4"
            android:textColor="@color/black"/>


        <ImageView
            android:id="@+id/moreinfobtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/go"></ImageView>

    </RelativeLayout>


</LinearLayout>

