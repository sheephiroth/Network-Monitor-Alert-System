<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:scrollbars="vertical"
    android:background="#F5F2FB"
    tools:context=".Server_Discovery">

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/back" />


    <TextView
        android:id="@+id/edt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/back"
        android:text="Server Detail"
        android:textColor="#004AAD"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/back"
        android:layout_marginTop="15dp"
        android:background="#CBD1D2" />

    <TextView
        android:id="@+id/Url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:text="Url"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/edt_url"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="25dp"
        android:text="url"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Url"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="Maps"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/mapsbtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_url"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:text="Maps"
        android:textColor="#004AAD"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/text1"
        android:layout_marginTop="15dp"
        android:background="#CBD1D2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hostsbtn"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@id/text1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="#F5F2FB"
        android:text="Hosts"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/problemsbtn"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@id/text1"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:background="#F5F2FB"
        android:text="Problems"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/historybtn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_below="@id/text1"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="20dp"
        android:background="#F5F2FB"
        android:text="History"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/discoverybtn"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:layout_below="@id/text1"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="20dp"
        android:background="#F5F2FB"
        android:text="Discovery"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>



    <TextView
        android:layout_width="96dp"
        android:layout_height="2dp"
        android:layout_below="@id/discoverybtn"
        android:layout_marginLeft="265dp"
        android:background="@color/black" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/hostsbtn"
        android:layout_marginTop="15dp"
        android:background="#CBD1D2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/discoverylist"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/hostsbtn"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:scrollbars="vertical" />

</RelativeLayout>