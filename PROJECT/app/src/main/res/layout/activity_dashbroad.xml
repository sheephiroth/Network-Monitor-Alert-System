<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:scrollbars="vertical"
    android:background="#F5F2FB"
    tools:context=".Dashbroad"
    >

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/back"
        android:scaleX="-1"></ImageView>

    <TextView
        android:id="@+id/edt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/back"
        android:text="Server Name"
        android:textColor="#004AAD"
        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/sen1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/back"
        android:layout_marginTop="15dp"
        android:background="#CBD1D2" />

    <TextView
        android:id="@+id/sen2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/color1"
        android:layout_marginTop="10dp"
        android:background="#CBD1D2"
        />

    <TextView
        android:id="@+id/sen3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/color8"
        android:layout_marginTop="10dp"
        android:background="#CBD1D2"
        />



    <TextView
        android:id="@+id/h_ava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/sen1"
        android:text="Host Availability"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/color1"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:background="#00FF99"
        android:layout_marginTop="10dp"
        android:layout_below="@id/h_ava"
        />

    <TextView
        android:id="@+id/tv_a1"
        android:layout_width="95dp"
        android:layout_height="78dp"
        android:text="2"
        android:textSize="15sp"
        android:gravity="center"

        android:textColor="@color/black"
        android:layout_below="@id/h_ava"
        />

    <TextView
        android:id="@+id/t_ava1"
        android:layout_width="95dp"
        android:layout_height="82dp"
        android:layout_marginTop="15dp"
        android:text="available"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_below="@id/h_ava"
        />

    <TextView
        android:id="@+id/color2"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:background="#FF5757"
        android:layout_marginLeft="95dp"
        android:layout_below="@id/h_ava"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_a2"
        android:layout_width="95dp"
        android:layout_height="78dp"
        android:text="0"
        android:textSize="15sp"
        android:gravity="center"

        android:layout_marginLeft="95dp"
        android:textColor="@color/black"
        android:layout_below="@id/h_ava"
        />

    <TextView
        android:id="@+id/t_ava2"
        android:layout_width="95dp"
        android:layout_height="82dp"
        android:layout_marginTop="15dp"
        android:text="Not available"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginLeft="95dp"
        android:textColor="@color/black"
        android:layout_below="@id/h_ava"
        />

    <TextView
        android:id="@+id/color3"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:background="#d9d9d9"
        android:layout_marginLeft="190dp"
        android:layout_below="@id/h_ava"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_a3"
        android:layout_width="95dp"
        android:layout_height="78dp"
        android:text="0"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginLeft="190dp"
        android:textColor="@color/black"
        android:layout_below="@id/h_ava"
        />

    <TextView
        android:id="@+id/t_ava3"
        android:layout_width="95dp"
        android:layout_height="82dp"
        android:layout_marginTop="15dp"
        android:text="Unknown"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginLeft="190dp"
        android:textColor="@color/black"
        android:layout_below="@id/h_ava"
        />

    <TextView
        android:id="@+id/color4"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:background="#556369"
        android:layout_marginLeft="280dp"
        android:layout_below="@id/h_ava"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_a4"
        android:layout_width="95dp"
        android:layout_height="78dp"
        android:text="2"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginLeft="280dp"
        android:textColor="@color/black"
        android:layout_below="@id/h_ava"
        />

    <TextView
        android:id="@+id/t_ava4"
        android:layout_width="95dp"
        android:layout_height="82dp"
        android:layout_marginTop="15dp"
        android:text="Total"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginLeft="280dp"
        android:textColor="@color/black"
        android:layout_below="@id/h_ava"
        />



    <TextView
        android:id="@+id/h_ava2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/sen2"
        android:text="Problems By Severity"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/color5"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="#e25858"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/color6"
        android:layout_below="@id/h_ava2"
        />

    <TextView
        android:id="@+id/tv_p1"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:text="0"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_toLeftOf="@id/color6"
        android:textColor="@color/black"
        android:layout_below="@id/h_ava2"
        />

    <TextView
        android:id="@+id/t_ava5"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:text="Disaster"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_toLeftOf="@id/color6"
        android:textColor="@color/black"
        android:layout_below="@id/h_ava2"
        />

    <TextView
        android:id="@+id/color6"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="#e36757"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/h_ava2"
        />
    <TextView
        android:id="@+id/tv_p2"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:text="0"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_below="@id/h_ava2"
        />

    <TextView
        android:id="@+id/t_ava6"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:text="High"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_below="@id/h_ava2"
        />
    <TextView
        android:id="@+id/color7"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="#fdb358"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/color6"
        android:layout_below="@id/h_ava2"
        />

    <TextView
        android:id="@+id/tv_p3"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:text="0"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_toRightOf="@id/color6"
        android:textColor="@color/black"
        android:layout_below="@id/h_ava2"
        />
    <TextView
        android:id="@+id/t_ava7"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:text="Average"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_toRightOf="@id/color6"
        android:textColor="@color/black"
        android:layout_below="@id/h_ava2"
        />
    <TextView
        android:id="@+id/color8"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="#fbd358"
        android:layout_toLeftOf="@+id/color9"
        android:layout_below="@id/color5"
        />

    <TextView
        android:id="@+id/tv_p4"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_below="@id/color5"
        android:layout_marginTop="-9dp"
        android:gravity="center"
        android:text="0"
        android:layout_toLeftOf="@+id/color9"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/t_ava8"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_below="@id/color5"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="Warning"
        android:layout_toLeftOf="@id/color9"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/color9"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="#7196fb"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/color5"
        />
    <TextView
        android:id="@+id/tv_p5"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:text="0"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="-9dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_below="@id/color5"
        />
    <TextView
        android:id="@+id/t_ava9"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginTop="7dp"
        android:text="Information"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_below="@id/color5"
        />

    <TextView
        android:id="@+id/color10"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="#c9cfca"
        android:layout_toRightOf="@id/color9"
        android:layout_below="@id/color5"
        />
    <TextView
        android:id="@+id/tv_p6"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:text="0"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="-9dp"
        android:layout_toRightOf="@id/color9"
        android:textColor="@color/black"
        android:layout_below="@id/color5"
        />
    <TextView
        android:id="@+id/t_ava10"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginTop="7dp"
        android:text="Not classified"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_toRightOf="@id/color9"
        android:textColor="@color/black"
        android:layout_below="@id/color5"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Discovery Status"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/sen3"
        />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Discovery rule"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_below="@id/text3"
        />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Up"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_below="@id/text3"
        android:layout_marginLeft="250dp"
        />

    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Down"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_below="@id/text3"
        android:layout_marginLeft="300dp"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dislist"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/text4"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:scrollbars="vertical" />















</RelativeLayout>