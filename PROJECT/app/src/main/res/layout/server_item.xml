<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#DEF3F8">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Servername : "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_sname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/t1"
            android:text="Servername"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/delbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moreinfobtn"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:text="Delete"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/editbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/delbtn"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:text="Edit"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sname"
            android:layout_marginTop="5dp"
            android:text="Url : "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sname"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/t2"
            android:text="url"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/test1"
            android:layout_marginTop="5dp"
            android:text="Username : "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/test1"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/t3"
            android:text="user"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/test2"
            android:layout_marginTop="5dp"
            android:text="Password : "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/test3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/test2"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/t4"
            android:text="pass"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/moreinfobtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/go"></ImageView>

    </RelativeLayout>


</LinearLayout>

