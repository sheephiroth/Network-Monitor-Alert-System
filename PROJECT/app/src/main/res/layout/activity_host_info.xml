<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:scrollbars="vertical"
    android:background="#F5F2FB"
    tools:context=".Host_info">

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/tv_hostname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/back"
        android:text="Host name"
        android:textColor="#004AAD"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/back"
        android:layout_marginTop="15dp"
        android:background="#CBD1D2" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        android:text="IP"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="75dp"
        android:layout_toRightOf="@id/text1"
        android:text="12365415"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Availabillity"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_availabillity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ip"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/text2"
        android:text="SNMP"
        android:textColor="#98BF64"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Problems"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@id/text2"
        android:id="@+id/text3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        />


    <TextView
        android:id="@+id/tv_problems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_availabillity"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/text3"
        android:text="Problems"
        android:textColor="#004AAD"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Status"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_problems"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/text4"
        android:text="Enable"
        android:textColor="#98BF64"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Lasted Data"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_lasteddata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_status"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/text4"
        android:text="Lasted Data"
        android:textColor="#004AAD"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Risk"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@id/text5"
        android:id="@+id/text6"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_risk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_lasteddata"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/text6"
        android:text="Risk"
        android:textColor="#004AAD"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Risk Alert"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@id/text6"
        android:id="@+id/text7"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_rconfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_risk"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/text7"
        android:text="Config"
        android:textColor="#004AAD"
        android:textSize="20sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Graph"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@id/text7"
        android:id="@+id/text8"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_graphs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_rconfig"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/text8"
        android:text="Graphs"
        android:textColor="#004AAD"
        android:textSize="20sp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host Config"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@id/text8"
        android:id="@+id/text9"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_graphs"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/text9"
        android:text="Config"
        android:textColor="#004AAD"
        android:textSize="20sp" />








</RelativeLayout>